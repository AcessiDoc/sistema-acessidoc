@{
    ViewData["Title"] = "AcessiDoc";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tela Inicial</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body>
    <div class="container-main">
        <div class="container-nome-sistema">
            <strong>
                <font color="#FFFFF" size="20">
                    <h1>AcessiDoc</h1>
                </font>
            </strong>
        </div>
        <div class="container-bloco-upload">
            <div class="container-upload">
                <img src="~/images/—Pngtree—upload icon isolated on background_5104432.png" width="200" />
            </div>
            <div class="container-formulario">
                <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadFile">
                    <strong>
                        <font color="#1f8420" size="3">
                            <p>Selecione o tamanho da fonte, 18 ou 24: </p>
                        </font>
                    </strong>
                    <div data-mdb-input-init class="form-outline mb-4">
                        <div class="container-opcoes-upload">
                            <label>
                                <input type="number" name="fontSize" placeholder="18" step="6" min="18" max="24" required />
                            </label>
                        </div>
                    </div>
                    <div data-mdb-input-init class="form-outline mb-4">
                        <div class="container-opcoes-upload">
                            <strong>
                                <font color="#1f8420" size="3">
                                    <p>Selecione um arquivo PDF: </p>
                                </font>
                            </strong>
                            <input type="file" name="files" multiple required />
                        </div>
                    </div>
                    <div class="container-button">
                        <button type="submit">Converter</button>
                    </div>
                </form>
            </div>
            <footer>
                @{
                    var anoAtual = DateTime.Now.Year;
                }
                <font color="#FFFFF" size="3">
                    &copy; @anoAtual - AcessiDoc
                </font>
            </footer>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.8.1/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/api/ProcessarFormulario.js" asp-append-version="true"></script>
    </div>
</body>
</html>